#include <iostream>
using namespace std;

class Graph
{
    int n, e;
    int adj[50][50];

public:
    void inputGraph();
    void displayMatrix();
    void BFS();
};

// -------- Input Graph --------
void Graph::inputGraph()
{
    int u, v;
    char c;

    cout << "Enter number of vertices:\n";
    cin >> n;

    cout << "Enter number of edges:\n";
    cin >> e;

    // Initialize adjacency matrix with 0
    for (int i = 1; i <= n; i++)
        for (int j = 1; j <= n; j++)
            adj[i][j] = 0;

    for (int i = 1; i <= e; i++)
    {
        cout << "Enter end vertices of edge e" << i << " = ";
        cin >> u >> c >> v;

        adj[u][v] = 1;
        adj[v][u] = 1;
    }
}

// -------- Display Matrix --------
void Graph::displayMatrix()
{
    cout << "\nAdjacency Matrix-----\n";
    cout << "  ";
    for (int i = 1; i <= n; i++)
        cout << "V" << i << " ";
    cout << endl;
    for (int i = 1; i <= n; i++)
    {
        cout << "V" << i << " ";
        for (int j = 1; j <= n; j++)
            cout << adj[i][j] << "  ";
        cout << endl;
    }
}

// -------- BFS Traversal --------
void Graph::BFS()
{
    int start;
    int queue[30], front = 0, rear = 0;
    int visited[50] = {0};

    cout << "Enter starting vertex: ";
    cin >> start;

    visited[start] = 1;
    queue[rear++] = start;

    cout << "BFS: ";

    while (front < rear)
    {
        int m = queue[front++];
        cout << m << " ";
        for (int j = 1; j <= n; j++)
        {
            if (adj[m][j] == 1 && visited[j] == 0)
            {
                visited[j] = 1;
                queue[rear++] = j;
            }
        }
    }
    cout << endl;
}
// -------- Main Function --------
int main()
{
    Graph g;

    g.inputGraph();
    g.displayMatrix();
    g.BFS();

    return 0;
}
